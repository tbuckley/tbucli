{
    "hooks": {
        "Notification": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "name": "notification-handler",
                        "type": "command",
                        "command": "${extensionPath}${/}hooks${/}notify-hook.sh \"Gemini CLI permission request\"",
                        "timeout": 5000
                    }
                ]
            }
        ],
        "AfterAgent": [
            {
                "matcher": "*",
                "hooks": [
                    {
                        "name": "ralph-loop",
                        "type": "command",
                        "command": "${extensionPath}${/}hooks${/}stop-hook.sh",
                        "description": "The Ralph infinite loop mechanism"
                    },
                    {
                        "name": "afteragent-handler",
                        "type": "command",
                        "command": "${extensionPath}${/}hooks${/}notify-hook.sh \"Gemini CLI completed task\"",
                        "timeout": 5000
                    }
                ]
            }
        ]
    }
}